<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.whatsonsalon"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="26"
        android:targetSdkVersion="32" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:extractNativeLibs="false"
        android:icon="@mipmap/ic_launcher"
        android:label="WhatsOnSalon"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.WhatsOnSalon" >
        <activity
            android:name="com.example.whatsonsalon.SelezionaSlotAppuntamento"
            android:exported="false"
            android:parentActivityName="com.example.whatsonsalon.AggiungiAppActivity" />
        <activity
            android:name="com.example.whatsonsalon.AggiungiAppActivity"
            android:exported="false"
            android:parentActivityName="com.example.whatsonsalon.MainPage" />
        <activity
            android:name="com.example.whatsonsalon.MainPage"
            android:exported="false"
            android:parentActivityName="com.example.whatsonsalon.MainActivity" />
        <activity
            android:name="com.example.whatsonsalon.MainActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="com.example.whatsonsalon.androidx-startup"
            android:exported="false" >
            <meta-data
                android:name="androidx.emoji2.text.EmojiCompatInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.lifecycle.ProcessLifecycleInitializer"
                android:value="androidx.startup" />
        </provider>
    </application>

</manifest>